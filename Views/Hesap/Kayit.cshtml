@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }
    </style>
</head>
<body>

    <div class="login-box">
        <h3 class="text-center mb-4">Sign Up</h3>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger">@ViewBag.Hata</div>
        }

        <form method="post">
            <div class="mb-3">
                <label>Name and Surname</label>
                <input type="text" name="AdSoyad" class="form-control" placeholder="Ex: John Doe" required />
            </div>
            <div class="mb-3">
                <label>E-mail Address</label>
                <input type="email" name="Email" class="form-control" placeholder="ex@mail.com" required />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input type="password" name="Sifre" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3 fw-bold shadow-sm"
                    style="background-color: #11998e; border: none;">
                Sign Up
            </button>
        </form>

        <div class="text-center">
            <small>Do you already have an account? <a href="/Hesap/Giris" class="text-primary fw-bold">Login</a></small>
        </div>
    </div>

</body>
</html>