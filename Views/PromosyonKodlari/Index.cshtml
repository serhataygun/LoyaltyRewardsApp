@model IEnumerable<LoyaltyRewardsApp.Models.PromosyonKodu>

@{
    ViewData["Title"] = "Kod Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>💎 Promosyon Kodları</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">+ Yeni Kod Üret</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Kod)</th>
                    <th>@Html.DisplayNameFor(model => model.PuanDegeri)</th>
                    <th>@Html.DisplayNameFor(model => model.KullanildiMi)</th>
                    <th class="text-end" style="min-width: 200px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold font-monospace">@Html.DisplayFor(modelItem => item.Kod)</td>
                        <td><span class="badge bg-success">+@item.PuanDegeri</span></td>
                        <td>
                            @if (item.KullanildiMi)
                            {
                                <span class="badge bg-danger">Kullanıldı</span>
                            }
                            else
                            {

                                <span class="badge bg-success">Aktif</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Düzenle</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Detay</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>