@model LoyaltyRewardsApp.Models.PromosyonKodu

@{
    ViewData["Title"] = "Yeni Kod Oluştur";
}

<div class="container mt-4" style="max-width: 100%;">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">💎 New Promotion Code</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Kod" class="control-label fw-bold"></label>
                    <input asp-for="Kod" class="form-control" placeholder="Ex: YAZ2025" />
                    <span asp-validation-for="Kod" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PuanDegeri" class="control-label fw-bold"></label>
                    <input asp-for="PuanDegeri" class="form-control" />
                    <span asp-validation-for="PuanDegeri" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="KullanildiMi" /> @Html.DisplayNameFor(model => model.KullanildiMi)
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Create and Save" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>