@model LoyaltyRewardsApp.Models.Odul

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4" style="max-width: 600px;">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">🗑️ Ödülü Silmek İstiyor Musun?</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Baslik)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Baslik)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Aciklama)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Aciklama)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.GerekliPuan)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.GerekliPuan)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger btn-lg px-4 me-2">
                    Evet, Sil
                </button>

                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    Vazgeç
                </a>
            </form>
        </div>

    </div>
</div>