@model LoyaltyRewardsApp.Models.Odul

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4" style="max-width: 100%;">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">🎁 Add New Reward</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Baslik" class="control-label"></label>
                    <input asp-for="Baslik" class="form-control" />
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Aciklama" class="control-label"></label>
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="GerekliPuan" class="control-label"></label>
                    <input asp-for="GerekliPuan" class="form-control" />
                    <span asp-validation-for="GerekliPuan" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 mt-3">
                    <input type="submit" value="Create and Save" class="btn btn-success btn-lg" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
