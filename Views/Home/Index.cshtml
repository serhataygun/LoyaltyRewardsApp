@model LoyaltyRewardsApp.Models.Musteri

@{
    ViewData["Title"] = "Sadakat Portalı";

    // İlerleme Çubuğu Hesabı
    int hedefPuan = 1000;
    int yuzde = 0;

    if (Model != null)
    {
        yuzde = (Model.ToplamPuan * 100) / hedefPuan;
        if (yuzde > 100) yuzde = 100;
    }
}

<div class="text-center mt-5">
    @if (Model != null && Model.Email != null) // Giriş yapmış kullanıcı
    {
        <h1 class="display-4">Hoşgeldin, @Model.AdSoyad</h1>
        <p class="lead">Mevcut Puanınız: <strong class="text-primary" style="font-size: 1.5em;">@Model.ToplamPuan</strong></p>
    }
    else // Giriş yapmamış misafir
    {
        <h1 class="display-4">Hoşgeldin Misafir</h1>
        <p>Ödülleri görmek ve kazanmak için lütfen giriş yapın.</p>
    }
</div>

@if (Model != null && Model.Email != null)
{
    <div class="container mb-4">
        <div class="card bg-light border-0 shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body p-3">
                <h6 class="card-title text-center mb-2 text-muted">💎 Hediye Kodun Var Mı?</h6>

                <form asp-controller="Home" asp-action="PuanKazan" method="post" class="d-flex gap-2">
                    <input type="text" name="girilenKod" class="form-control" placeholder="Örn: YAZ2025" required />
                    <button type="submit" class="btn btn-warning text-dark fw-bold">Yükle</button>
                </form>
            </div>
        </div>
    </div>
}

<div class="container mt-2">
    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Mesaj"]</div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Hata"]</div>
    }
</div>

<div class="container mt-3">
    <h5>Bir sonraki seviyeye ilerleme:</h5>
    <div class="progress" style="height: 25px;">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
             role="progressbar"
             style="width: @yuzde%"
             aria-valuenow="@yuzde" aria-valuemin="0" aria-valuemax="100">
            %@yuzde
        </div>
    </div>
    <small class="text-muted">Hedef: @hedefPuan Puan</small>
</div>

<hr class="my-5" />

<div class="container mb-5">
    <h3 class="mb-4">Kazanabileceğin Ödüller</h3>
    <div class="row">

        @if (ViewBag.Oduller != null)
        {
            @foreach (var odul in ViewBag.Oduller as List<LoyaltyRewardsApp.Models.Odul>)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white text-center">
                            <strong>@odul.GerekliPuan Puan</strong>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@odul.Baslik</h5>
                            <p class="card-text">@odul.Aciklama</p>

                            <div class="mt-auto">
                                @if (Model != null && Model.Email != null && Model.ToplamPuan >= odul.GerekliPuan)
                                {
                                    <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#modalOdul_@odul.Id">
                                        Ödülü Al
                                    </button>
                                }
                                else if (Model == null || Model.Email == null)
                                {
                                    <a asp-controller="Hesap" asp-action="Giris" class="btn btn-outline-primary w-100">
                                        Almak için Giriş Yap
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>Yetersiz Puan</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="modalOdul_@odul.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ödül Onayı</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>@odul.Baslik</strong> ödülünü almak üzeresiniz.</p>
                                <p>Puanınızdan <strong>@odul.GerekliPuan</strong> puan düşülecektir.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                <form asp-controller="Home" asp-action="OdulKullan" method="post">
                                    <input type="hidden" name="odulId" value="@odul.Id" />
                                    <button type="submit" class="btn btn-primary">Onayla ve Kullan</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>