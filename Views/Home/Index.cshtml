@model LoyaltyRewardsApp.Models.Musteri

@{
    ViewData["Title"] = "Loyalty App";

    // İlerleme Çubuğu Hesabı
    int hedefPuan = 1;

    if (@Model.ToplamPuan <= 500)
    {
        hedefPuan = 500;
    }
    else if (@Model.ToplamPuan > 500 && @Model.ToplamPuan <= 700)
    {
        hedefPuan = 700;
    }
    else if (@Model.ToplamPuan > 700 && @Model.ToplamPuan <= 800)
    {
        hedefPuan = 800;
    }
    else if (@Model.ToplamPuan > 800 && @Model.ToplamPuan <= 850)
    {
        hedefPuan = 850;
    }
    else if (@Model.ToplamPuan > 850 && @Model.ToplamPuan <= 1000)
    {
        hedefPuan = 1000;
    }
    else if (@Model.ToplamPuan > 1000 && @Model.ToplamPuan <= 1200)
    {
        hedefPuan = 1200;
    }
    else if (@Model.ToplamPuan > 1200 && @Model.ToplamPuan <= 2000)
    {
        hedefPuan = 2000;
    }
    else if (@Model.ToplamPuan > 2000 && @Model.ToplamPuan <= 3000)
    {
        hedefPuan = 3000;
    }
    else if (@Model.ToplamPuan > 3000 && @Model.ToplamPuan <= 3500)
    {
        hedefPuan = 3500;
    }
    else if (@Model.ToplamPuan > 3500 && @Model.ToplamPuan <= 4000)
    {
        hedefPuan = 4000;
    }
    else
    {
        hedefPuan = 5000;
    }

    int yuzde = 0;

    if (Model != null)
    {
        yuzde = (Model.ToplamPuan * 100) / hedefPuan;
        if (yuzde > 100) yuzde = 100;
    }
}

<div class="text-center mt-5">
    @if (Model != null && Model.Email != null) // Giriş yapmış kullanıcı
    {
        <h1 class="display-3">Welcome, @Model.AdSoyad</h1>
        <p class="lead">Your Current Points:  <strong class="text-primary" style="font-size: 1.5em;">@Model.ToplamPuan</strong></p>
    }
    else // Giriş yapmamış misafir
    {
        <h1 class="display-4">Welcome Guest</h1>
        <p>Please login to get the rewards.</p>
    }
</div>

@if (Model != null && Model.Email != null)
{
    <div class="container mb-4">
        <div class="card bg-light border-0 shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body p-3">
                <h6 class="card-title text-center mb-2 text-muted">Do You Have a Promotion Code?</h6>

                <form asp-controller="Home" asp-action="PuanKazan" method="post" class="d-flex gap-2">
                    <input type="text" name="girilenKod" class="form-control" placeholder="Ex: YAZ2025" required />
                    <button type="submit" class="btn btn-warning text-dark fw-bold">Apply</button>
                </form>
            </div>
        </div>
    </div>
}

<div class="container mt-2">
    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Mesaj"]</div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Hata"]</div>
    }
</div>

<div class="container mt-3">
    <h5>Advancing to the Next Level:</h5>
    <div class="progress" style="height: 25px;">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-success"
             role="progressbar"
             style="width: @yuzde%"
             aria-valuenow="@yuzde" aria-valuemin="0" aria-valuemax="100">
            %@yuzde
        </div>
    </div>
    <small class="text-muted">Goal: @hedefPuan Points</small>
</div>

<hr class="my-5" />

<div class="container mb-5">
    <h3 class="mb-4">Rewards You Can Win</h3>
    <div class="row">

        @if (ViewBag.Oduller != null)
        {
            @foreach (var odul in (ViewBag.Oduller as List<LoyaltyRewardsApp.Models.Odul>).Take(3))
            {
                <div class="col-md-4 mb-5">
                    <div class="card shadow-sm h-100" style="border-radius:15px">
                        <div class="card-header text-dark text-center"
                             style="background: linear-gradient(to right, #11998e, #38ef7d); border-top-right-radius: 15px; border-top-left-radius: 15px">
                            <strong>@odul.GerekliPuan Points</strong>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@odul.Baslik</h5>
                            <p class="card-text">@odul.Aciklama</p>

                            <div class="mt-auto">
                                @if (Model != null && Model.Email != null && Model.ToplamPuan >= odul.GerekliPuan)
                                {
                                    <button type="button" class="btn btn-dark w-100 fw-bold shadow-sm"
                                            style="background-color: #002b36; border-radius: 50px;"
                                            data-bs-toggle="modal" data-bs-target="#modalOdul_@odul.Id">
                                        Claim Reward
                                    </button>
                                }
                                else if (Model == null || Model.Email == null)
                                {
                                    <a asp-controller="Hesap" asp-action="Giris" class="btn btn-dark w-100 fw-bold shadow-sm"
                                       style="background-color: #002b36; border-radius: 50px;">
                                        Login to Get Reward
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" style="border-radius: 50px" disabled>Insufficient Point</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="modalOdul_@odul.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ödül Onayı</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>@odul.Baslik</strong> ödülünü almak üzeresiniz.</p>
                                <p>Puanınızdan <strong>@odul.GerekliPuan</strong> puan düşülecektir.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                <form asp-controller="Home" asp-action="OdulKullan" method="post">
                                    <input type="hidden" name="odulId" value="@odul.Id" />
                                    <button type="submit" class="btn btn-primary">Onayla ve Kullan</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-controller="Home" asp-action="Odullerimiz" class="btn btn-outline-dark btn-lg px-5 shadow-sm"
               style="background: linear-gradient(to right, #11998e, #38ef7d); border-radius: 50px;">
                See All Rewards <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>