@model List<LoyaltyRewardsApp.Models.OdulGecmisi>

@{
    ViewData["Title"] = "Ödül Geçmişim";
}

<div class="container mt-5" style="max-width: 100%;">
    <h2 class="mb-4 text-center">📜 Ödül Geçmişim</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Henüz hiç ödül almadınız. Puanlarınızı biriktirip harcamaya başlayın!
        </div>
        <div class="text-center">
            <a asp-action="Index" class="btn btn-primary">Ödüllere Git</a>
        </div>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th class="py-3 ps-3" style="border-top-left-radius: 10px;">Ödül Adı</th>
                    <th class="py-3">Harcanan Puan</th>
                    <th class="py-3 pe-3" style="border-top-right-radius: 10px;">Tarih</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var islem in Model)
                {
                    <tr>
                        <td class="fw-bold text-primary ps-3">@islem.OdulAdi</td>
                        <td><span class="badge bg-danger">-@islem.HarcananPuan</span></td>
                        <td class="text-muted pe-3">@islem.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>