@model LoyaltyRewardsApp.Models.Musteri

@{
    ViewData["Title"] = "Ödül Vitrini";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🎁 Tüm Ödüller</h2>
    <div class="row">
        @if (ViewBag.Oduller != null)
        {
            @foreach (var odul in ViewBag.Oduller as List<LoyaltyRewardsApp.Models.Odul>)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header text-dark text-center" style="background: linear-gradient(to right, #11998e, #38ef7d);">
                            <strong>@odul.GerekliPuan Puan</strong>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@odul.Baslik</h5>
                            <p class="card-text">@odul.Aciklama</p>

                            <div class="mt-auto">
                                @if (Model != null && Model.Email != null && Model.ToplamPuan >= odul.GerekliPuan)
                                {
                                    <button type="button" class="btn btn-success w-100 fw-bold shadow-sm"
                                            style="background-color: #11998e; border: none;"
                                            data-bs-toggle="modal" data-bs-target="#modalOdul_@odul.Id">
                                        Ödülü Al
                                    </button>
                                }
                                else if (Model == null || Model.Email == null)
                                {
                                    <a asp-controller="Hesap" asp-action="Giris" class="btn btn-success w-100 fw-bold shadow-sm"
                                       style="background-color: #11998e; border: none;">
                                        Almak İçin Giriş Yap
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-secondary w-100" disabled>Yetersiz Puan</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="modalOdul_@odul.Id" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Ödül Onayı</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p><strong>@odul.Baslik</strong> ödülünü almak üzeresiniz.</p>
                                <p>Puanınızdan <strong>@odul.GerekliPuan</strong> düşülecektir.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                                <form asp-controller="Home" asp-action="OdulKullan" method="post">
                                    <input type="hidden" name="odulId" value="@odul.Id" />
                                    <button type="submit" class="btn btn-primary">Onayla</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>