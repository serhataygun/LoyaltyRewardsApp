@model LoyaltyRewardsApp.Models.Musteri

@{
    ViewData["Title"] = "Müşteri Detayı";
}

<div class="container mt-4" style="max-width: 100%px;">
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">📄 Customer Profile Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AdSoyad)</dt>
                <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.AdSoyad)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ToplamPuan)</dt>
                <dd class="col-sm-8"><span class="badge bg-success">@Model.ToplamPuan Points</span></dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Rol)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Rol)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">Edit</a>
            <a asp-action="Index" class="btn btn-secondary px-4">Return</a>
        </div>
    </div>
</div>