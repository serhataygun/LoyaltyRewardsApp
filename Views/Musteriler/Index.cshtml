@model IEnumerable<LoyaltyRewardsApp.Models.Musteri>

@{
    ViewData["Title"] = "Müşteri Listesi";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>👤 Customer Management</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg" style="border-radius: 15px;">
        + Add New Customer
    </a>
</div>


<div class="card-body p-0 overflow-hidden" style="border-radius: 10px;">
    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.AdSoyad)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.ToplamPuan)</th>
                <th>@Html.DisplayNameFor(model => model.Rol)</th>
                <th class="text-end" style="min-width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@Html.DisplayFor(modelItem => item.AdSoyad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <span class="badge bg-success rounded-pill">@item.ToplamPuan Points</span>
                    </td>
                    <td>
                        @if (item.Rol == "Admin")
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else
                        {

                            <span class="badge bg-secondary">Member</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
